<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".searchStoreList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_store_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/back" />
        <TextView
            android:id="@+id/search_store_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:fontFamily="@font/nanumsquareeb"
            android:gravity="center"
            android:text="검색한 장소명"
            android:textColor="#000000"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/search_store_map"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mapbtn" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_store_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>