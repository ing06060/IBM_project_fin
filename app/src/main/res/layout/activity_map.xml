<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:src="@drawable/back"
            android:layout_width="46dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/map_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:fontFamily="@font/nanumsquareeb"
            android:gravity="center"
            android:text="확진자이용매장"
            android:textColor="#000000"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/listbtn" />
    </LinearLayout>

    <fragment
        android:id="@+id/mapVisited"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="474dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/map_storeimage"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:foregroundGravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/map_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquareeb"
                android:padding="3dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/map_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="서울 광진구 00로"
                    android:textColor="#828282"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/map_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="02-1234-5678"
                    android:textColor="#828282"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/map_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2"
                    android:backgroundTint="#F2F2F2"
                    android:fontFamily="@font/nanumsquareeb"
                    android:paddingLeft="3dp"
                    android:paddingRight="10dp"
                    android:text="TextView"
                    android:textColor="#828282" />

                <TextView
                    android:id="@+id/map_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F2F2F2"
                    android:fontFamily="@font/nanumsquareeb"
                    android:text="TextView"
                    android:textColor="#828282" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/map_daysago"
                android:layout_width="89dp"
                android:layout_height="28dp"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#0F5CDF" />

            <ImageView
                android:id="@+id/map_dcongestionImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/round_20dp_ffffff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>